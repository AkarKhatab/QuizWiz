<?xml version='1.0' encoding='UTF-8'?>

<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

<!-- Main router -->
 <navigation-rule>
     <from-view-id>/*</from-view-id>
    <navigation-case>
        <from-outcome>home</from-outcome>
        <to-view-id>/index.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
        <from-outcome>game</from-outcome>
        <to-view-id>/partials/game/game.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
        <from-outcome>players</from-outcome>
        <to-view-id>/partials/players/players.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
        <from-outcome>login</from-outcome>
        <to-view-id>/partials/login/login.xhtml</to-view-id>
    </navigation-case>
<!--    <navigation-case>
        <from-outcome>signup</from-outcome>
        <to-view-id>partials/signup/signup.xhtml</to-view-id>
    </navigation-case>-->
</navigation-rule>       
    


</faces-config>
